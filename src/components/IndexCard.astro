---
interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<div
  class="w-1/2 not-prose p-[1px] rounded-md group transition-all ease-in-out hover:bg-gradient-to-tr from-blue-600 via-indigo-600 to-purple-600 dark:from-blue-300 dark:via-indigo-400 dark:to-purple-300"
>
  <a class="block p-4 rounded-[5px] bg-zinc-900 space-y-2">
    <div
      class="flex items-center space-x-2 pb-2 border-b border-zinc-700 w-fit"
    >
      <div class="text-xl font-semibold">{title}</div>
      <svg
        class="group-hover:translate-x-1 transition-transform ease-in-out fill-white"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M12.293 5.293a1 1 0 0 1 1.414 0l6 6a1 1 0 0 1 0 1.414l-6 6a1 1 0 0 1-1.414-1.414L16.586 13H5a1 1 0 1 1 0-2h11.586l-4.293-4.293a1 1 0 0 1 0-1.414z"
        >
        </path>
      </svg>
    </div>
    <div class="dark:text-zinc-400">
      {desc}
    </div>
  </a>
</div>
