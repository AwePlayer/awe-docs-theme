---
import { Image } from "astro:assets";
import planetImage from "../assets/images/planet.png";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Home Page">
  <NavBar />
  <main class="space-y-4 xl:space-y-10 z-40 bg-no-repeat bg-cover">
    <div
      class="px-4 py-10 xl:p-32 space-y-10 flex flex-col justify-center items-center"
    >
      <div class="w-40">
        <Image
          class="w-full h-full"
          src={planetImage}
          alt="planet-illustration"
          format="avif"
        />
      </div>
      <h1
        class="text-4xl xl:text-8xl xl:py-2 font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-blue-200 via-indigo-200 to-purple-400"
      >
        AweDocs theme for Astro
      </h1>
      <div
        class="w-fit h-fit bg-gradient-to-tr from-blue-300 via-indigo-400 to-purple-300 group transition-all ease-in-out rounded-xl p-[1px]"
      >
        <a
          href="/docs/getting-started"
          class="px-4 py-2 dark:bg-zinc-950 dark:hover:bg-zinc-900 flex justify-center items-center space-x-2 rounded-[11px]"
        >
          <span class="text-lg font-semibold text-zinc-200 text-center">
            Checkout the Theme
          </span>
          <svg
            class="group-hover:translate-x-1 transition-transform ease-in-out"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M12.293 5.293a1 1 0 0 1 1.414 0l6 6a1 1 0 0 1 0 1.414l-6 6a1 1 0 0 1-1.414-1.414L16.586 13H5a1 1 0 1 1 0-2h11.586l-4.293-4.293a1 1 0 0 1 0-1.414z"
              fill="#ffffff"
            >
            </path>
          </svg>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</MainLayout>
